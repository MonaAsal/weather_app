<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="4dp">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="0pt"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/city_cell"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="30dp"
            android:src="@drawable/ic_location"
            android:id="@+id/weather_iv"
            android:layout_marginStart="12dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="30dp"/>
        <TextView
            android:id="@+id/date_time_tv"
            android:layout_width="0dp"
            android:layout_marginTop="10dp"
            android:text="01.10.2019. - 16:58"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintStart_toEndOf="@+id/weather_iv"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="12dp"
            android:textColor="@color/gray"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/weather_degree_tv"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:text="ksnkjnskjnskn"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintTop_toBottomOf="@+id/date_time_tv"
            app:layout_constraintStart_toEndOf="@+id/weather_iv"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="14dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>