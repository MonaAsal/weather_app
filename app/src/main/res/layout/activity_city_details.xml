<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/city_list_bg"
    android:layout_height="match_parent"
    tools:context=".ui.cities.cityDetails.CityDetailsActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:theme="@style/AppTheme.AppBarOverlay">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="?attr/colorPrimary"
            app:popupTheme="@style/AppTheme.PopupOverlay" />

    </com.google.android.material.appbar.AppBarLayout>
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:translationZ="90dp"
    android:layout_marginTop="100dp"
    android:layout_height="match_parent"
    tools:ignore="UnusedAttribute">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="255dp"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/bg"/>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="32dp"
        app:cardCornerRadius="5dp"
        android:layout_marginEnd="32dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_height="wrap_content">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <TextView
            android:id="@+id/city_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="24dp"
            android:layout_marginTop="26dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="50dp"
            android:id="@+id/city_weather_iv"
            app:layout_constraintTop_toBottomOf="@+id/city_name_tv"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="68dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="50dp" />
        <TextView
            android:id="@+id/city_Description_lbl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/city_weather_iv"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textSize="14dp"
            android:textStyle="bold"
            android:text="@string/description"
            android:layout_marginTop="76dp"
            android:textColor="@color/black"
            android:layout_marginStart="32dp"
            app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/city_Description_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_weather_iv"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18dp"
                android:layout_marginTop="76dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/city_Temperature_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Description_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/temperature"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/city_Temperature_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Description_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/city_Humidity_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Temperature_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="14dp"
                android:textStyle="bold"
                android:text="@string/humidity"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/city_Humidity_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Temperature_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18dp"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>
            <TextView
                android:id="@+id/city_Windspeed_lbl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Humidity_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="14dp"
                android:textStyle="bold"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:text="@string/windspeed"
                android:layout_marginTop="7dp"
                android:textColor="@color/black"
                android:layout_marginStart="32dp"
                app:layout_constraintStart_toStartOf="parent"/>
            <TextView
                android:id="@+id/city_Windspeed_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/city_Humidity_lbl"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textSize="18dp"
                android:layout_marginBottom="30dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginTop="7dp"
                android:textColor="@color/colorPrimary"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>